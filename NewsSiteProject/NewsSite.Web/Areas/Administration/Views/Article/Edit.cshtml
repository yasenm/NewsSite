@model NewsSite.Web.Areas.Administration.InputModels.Articles.ArticleEditModel
@{
    ViewBag.Title = "Редакция на статия";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Article", new { area = "Administration" }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>@ViewBag.Title</legend>
        @Html.ValidationSummary()

        @Html.EditorFor(x => x.Title)
        <div class="form-group">
            <div class="col-lg-10">
                @Html.LabelFor(x => x.CategoryId, new { @class = "control-label" })
                @Html.DropDownListFor(x => x.CategoryId, (SelectList)ViewBag.Categories, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10">
                @Html.LabelFor(m => m.IsImportant, new { @class = "control-label" })
                @Html.CheckBoxFor(m => m.IsImportant, new { })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10">
                @Html.LabelFor(m => m.IsHighlighted, new { @class = "control-label" })
                @Html.CheckBoxFor(m => m.IsHighlighted, new { })
            </div>
        </div>
        @Html.EditorFor(x => x.Content, new { id = "article-content-box" })
        <div class="form-group">
            <div>
                <label for="CoverPhoto">Смени начална снимка</label>
                <input type="file" name="CoverPhoto" id="CoverPhoto" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <div>
                <label for="ArticlePhotos">Добави снимки в галерия</label>
                <input type="file" multiple name="ArticlePhotos" id="ArticlePhotos" class="btn btn-default" />
            </div>
        </div>
        @Html.Partial("_Submit")
    </fieldset>
}